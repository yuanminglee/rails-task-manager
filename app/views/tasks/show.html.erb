<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? '☑ This task is completed' : '☐ This task is not completed yet' %></p>
<%= link_to "Edit this task", edit_task_path(@task) %> |
<%= link_to "Destroy this task", task_path(@task), method: "delete", data: { confirm: "Are you sure?" } %> |

<%= link_to "Back to tasks", tasks_path %>
